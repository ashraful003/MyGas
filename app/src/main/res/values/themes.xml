<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.MyGas" parent="Theme.AppCompat.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/teal_200</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor">?attr/colorPrimaryVariant</item>
        <!-- Customize your theme here. -->
    </style>


    <style name="Theme.MyGas" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/white</item>
        <item name="android:statusBarColor">@color/red_500</item>
        <item name="android:fitsSystemWindows">false</item>
        <item name="colorPrimaryVariant">@color/red_500</item>
        <item name="colorOnSecondary">@color/black</item>
    </style>

    <style name="Toolbar" />
    <style name="Toolbar.Main" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:titleTextAppearance">@style/Toolbar.Main.Title</item>
        <item name="subtitleTextAppearance">@style/Toolbar.Main.Subtitle</item>
    </style>
    <style name="Toolbar.Main.Title" >
        <item name="android:textSize">20sp</item>
        <item name="android:background">@android:color/transparent</item>
        <item name="android:gravity">center</item>
    </style>

    <style name="Toolbar.Main.Subtitle">
        <item name="android:textSize">15sp</item>
        <item name="android:textColor">@color/white</item>
    </style>
</resources>